<?xml version="1.0"?>

<widgets>
    <banners_banner_view type="qm_banners/banner_widget_view" translate="name description" module="qm_banners">
        <name>Banner view</name>
        <description>Banner view widget</description>
        <is_email_compatible>0</is_email_compatible>
        <parameters>
            <banner_id type="complex" translate="label">
                <visible>1</visible>
                <required>1</required>
                <label>Banner</label>
                <type>label</type>
                <helper_block>
                    <type>qm_banners/adminhtml_banner_widget_chooser</type>
                    <data>
                        <button translate="open">
                            <open>Select Banner</open>
                        </button>
                    </data>
                </helper_block>
                <sort_order>120</sort_order>
            </banner_id>
        </parameters>
    </banners_banner_view>
</widgets>
