<?xml version="1.0"?>
<config>
    <sections>
        <qm_exportcatalog translate="label">
            <label>Export Catalog</label>
            <tab>qmage</tab>
            <frontend_type>text</frontend_type>
            <sort_order>4</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <qm_exportcatalog_settings translate="label">
                    <label>Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>1</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <store_name translate="label">
                            <label>Store name</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </store_name>

                        <company_name translate="label">
                            <label>Company name</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>20</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </company_name>

                        <agency_name translate="label">
                            <label>Agency that provides technical support for store</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </agency_name>

                        <offer_type translate="label">
                            <label>Offer type</label>
                            <frontend_type>select</frontend_type>
                            <source_model>qm_exportcatalog/system_config_source_offerType</source_model>
                            <sort_order>40</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </offer_type>

                        <product_model_attribute translate="label">
                            <label>What attrubute use as model</label>
                            <comment>Nested only in vendor.model offer type.</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>qm_exportcatalog/system_config_source_attributes</source_model>
                            <sort_order>50</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_model_attribute>

                        <product_vendor_attribute translate="label">
                            <label>What attrubute use as vendor</label>
                            <frontend_type>select</frontend_type>
                            <source_model>qm_exportcatalog/system_config_source_attributes</source_model>
                            <sort_order>60</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </product_vendor_attribute>

                        <add_related translate="label">
                            <label>Add related products</label>
                            <comment>Only in vendor.model type</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>70</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </add_related>

                        <sales_notes_rule translate="label">
                            <label>Sales notes rule</label>
                            <comment>Use %attrName% for use product attributes</comment>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>80</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </sales_notes_rule>

                        <file_path translate="label">
                            <label>File path</label>
                            <frontend_type>text</frontend_type>
                            <validate>required-entry</validate>
                            <sort_order>90</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </file_path>

                        <export_onsave translate="label">
                            <label>Export on save</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </export_onsave>

                    </fields>
                </qm_exportcatalog_settings>
            </groups>
        </qm_exportcatalog>
    </sections>
</config>