<?xml version="1.0"?>
<config>
    <sections>
        <qm_metatager translate="label" module="qm_metatager">
            <label>Metatager</label>
            <tab>qmage</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <product translate="label" module="qm_metatager">
                    <label>Product</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <meta_title translate="label" module="qm_metatager">
                            <label>Meta Title</label>
                            <frontend_type>textarea</frontend_type>
                            <comment>{{attribute name}}, {{category_names}} - for comma separated product categories</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_title>
                        <meta_keyword translate="label" module="qm_metatager">
                            <label>Meta Keywords</label>
                            <frontend_type>textarea</frontend_type>
                            <comment>{{attribute name}}, {{category_names}} - for comma separated product categories</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_keyword>
                        <meta_description translate="label" module="qm_metatager">
                            <label>Meta Description</label>
                            <frontend_type>textarea</frontend_type>
                            <comment>{{attribute name}}, {{category_names}} - for comma separated product categories</comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_description>
                        <reindex_all translate="label" module="qm_metatager">
                            <label>Reindex All Products(not only generated by this module)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reindex_all>
                        <reindex_only_active_store translate="label" module="qm_metatager">
                            <label>Reindex Only Products In Active Stores</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </reindex_only_active_store>
                        <add_on_save translate="label" module="qm_metatager">
                            <label>Add Metadata On Product Save</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </add_on_save>
                        <meta_title_enable translate="label" module="qm_metatager">
                            <label>Generate Meta Title</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_title_enable>
                        <meta_keyword_enable translate="label" module="qm_metatager">
                            <label>Generate Meta Keywords</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_keyword_enable>
                        <meta_description_enable translate="label" module="qm_metatager">
                            <label>Generate Meta Description</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_description_enable>
                    </fields>
                </product>
                <category translate="label" module="qm_metatager">
                    <label>Category</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <meta_title translate="label" module="qm_metatager">
                            <label>Meta Title</label>
                            <frontend_type>textarea</frontend_type>
                            <comment>{{attribute name}}</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_title>
                        <meta_keywords translate="label" module="qm_metatager">
                            <label>Meta Keywords</label>
                            <frontend_type>textarea</frontend_type>
                            <comment>{{attribute name}}</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_keywords>
                        <meta_description translate="label" module="qm_metatager">
                            <label>Meta Description</label>
                            <frontend_type>textarea</frontend_type>
                            <comment>{{attribute name}}</comment>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_description>
                        <reindex_all translate="label" module="qm_metatager">
                            <label>Reindex all category(not only generated by this module)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reindex_all>
                        <reindex_only_active_store translate="label" module="qm_metatager">
                            <label>Reindex only category in active stores</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </reindex_only_active_store>
                        <add_on_save translate="label"  module="qm_metatager">
                            <label>Add metadata on category save</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>6</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </add_on_save>
                        <meta_title_enable translate="label"  module="qm_metatager">
                            <label>Generate Meta Title</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>7</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_title_enable>
                        <meta_keywords_enable translate="label"  module="qm_metatager">
                            <label>Generate Meta Keywords</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>8</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_keywords_enable>
                        <meta_description_enable translate="label"  module="qm_metatager">
                            <label>Generate Meta Description</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>9</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </meta_description_enable>
                    </fields>
                </category>
                <product_image translate="label"  module="qm_metatager">
                    <label>Product Image Alt</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>30</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <main_image_alt translate="label"  module="qm_metatager">
                            <label>Main Image Alt Rule</label>
                            <frontend_type>text</frontend_type>
                            <comment>{{product attribute name}}</comment>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </main_image_alt>
                        <alt_rules translate="label"  module="qm_metatager">
                            <label>Image Alt Rule</label>
                            <frontend_type>textarea</frontend_type>
                            <comment>{{product attribute name}}. New rule on new line. Rules will be loop over images</comment>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </alt_rules>
                        <reindex_all translate="label"  module="qm_metatager">
                            <label>Reindex All Product Image Alts(not only generated by this module)</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>3</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </reindex_all>
                        <reindex_only_active_store translate="label"  module="qm_metatager">
                            <label>Reindex Only Product Image Alts In Active Stores</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>4</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                        </reindex_only_active_store>
                        <add_on_save translate="label"  module="qm_metatager">
                            <label>Add Image Alt On Product Save</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>5</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </add_on_save>
                    </fields>
                </product_image>
            </groups>
        </qm_metatager>
    </sections>
</config>