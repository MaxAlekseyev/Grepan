<form id="create-account-form">
    <div class="total-field">
        <input <?php $this->helper('qmcheckout')->isCreateAccountChecked() && print 'checked="checked" '?>type="checkbox" id="create_account" name="create_account" value="1" title="<?php echo $this->__('Create Account') ?>" class="checkbox non-storable"><label for="create_account" class="fs-12 ontext"><?php echo $this->__('Create Account') ?></label>
        <div id="create-account-note" class="note">* <?php echo $this->__('Password will be automatically generated.') ?></div>
    </div>
</form>
<script type="text/javascript">
    jQuery(function($){
        var inp = $("#create_account"), note = $("#create-account-note");
        inp.on("change", function(){
            inp.prop("checked") ? note.slideDown(100) : note.slideUp(100);
        })
    })
</script>